{
    "name": "pod-point/i18n",
    "description": "A package of useful components for internationalisation in Laravel applications.",
    "type": "library",
    "require": {
        "php": ">=7.3 | >=8.0",
        "ext-intl": "*",
        "illuminate/config": "^8.0",
        "illuminate/support": "^8.0",
        "illuminate/view": "^8.0",
        "league/iso3166": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "mpociot/vat-calculator": "^2.4"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.0",
        "phpunit/phpunit": "^9.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Pod Point Software Team",
            "email": "software@pod-point.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "PodPoint\\I18n\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PodPoint\\I18n\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "mpociot/vat-calculator"
            ]
        }
    }
}
